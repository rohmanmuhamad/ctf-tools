#!/bin/bash -e

INST_DIR=$PWD

curl http://valgrind.org/downloads/valgrind-3.10.0.tar.bz2 | tar xvj
cd valgrind-3.10.0
./autogen.sh
./configure --prefix=$INST_DIR
make -j $(nproc)
make install

git clone http://github.com/wmkhoo/taintgrind.git
cd taintgrind
../autogen.sh
./configure --prefix=$INST_DIR
make -j $(nproc)
make install
cd ../../

cd bin
for i in *
do
	mv $i taintgrind-$i
done
